#include <iostream>
#include <cstring>
#include <cmath>
#include <cctype>
#include <algorithm>
#include <vector>
#include <chrono>
#include <stack>
#include <queue>
#include <deque>
#include <utility>

using namespace std;//이름공간 선언
using namespace chrono;
int n,m;

//입력(입력 형식을 맞추기 위해 넣은 코드)
//사실상 최소신장트리의 간선 수를 구하는 문제이므로 n만 필요하다
void input(){
    cin>>n>>m;
    for(int i=0;i<m;i++){
        int a,b;
        cin>>a>>b;
    }
}

int main(){
    cin.tie(0);
    cout.tie(0);

    int t;
    cin>>t;
    for(int i=0;i<t;i++){
        input();//입력
        cout<<n-1<<"\n";//최소신장트리의 간선 수는 n-1개
    }
    return 0;
}
